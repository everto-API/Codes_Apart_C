#include <stdio.h>
#include <string.h>

int main() {
    int num;
    printf("Digite um número para saber qual o mês do ano.\n> ");
    scanf("%i", &num);
    switch(num) {
        case 1:
            printf("É janeiro!");
            break;
        case 2:
            printf("É fevereiro!");
            break;
        case 3:
            printf("É março!");
            break;
        case 4:
            printf("É abril! Mês do aniversário de quem programou isso!");
            break;
        case 5:
            printf("É maio!");
            break;
        case 6:
            printf("É junho!");
            break;
        case 7:
            printf("É julho!");
            break;
        case 8:
            printf("É agosto!");
            break;
        case 9:
            printf("É setembro!");
            break;
        case 10:
            printf("É outubro!");
            break;
        case 11:
            printf("É novembro!");
            break;
        case 12:
            printf("É dezembro!");
            break;
        default:
            printf("O número não corresponde ao intervalo de 12.");
    }
}
