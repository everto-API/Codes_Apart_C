
#include <stdio.h>

int main(void) {
    int matriz[3][4] = {{1, 2, 3, 4}, {5, 6, 7, 2}, {9, 10, 11, 12}}, i, j, numero_a_procurar, achou = 0;
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 4; j++) {
            printf("Elemento [%d][%d] = %d\n", i, j, matriz[i][j]);
        }
    }
    printf("\nQual número você deseja procurar?\n> ");
    scanf("%i", &numero_a_procurar);
    
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 4; j++) {
            if (numero_a_procurar == matriz[i][j]) {
                achou = 1;
                printf("\nNúmero '%d' encontrado em [%d][%d]", numero_a_procurar, i, j);
            }
                
        }
    }
if (achou == 0) {
    printf("\nNúmero '%d' não presente na matriz.", numero_a_procurar);
} 
}
